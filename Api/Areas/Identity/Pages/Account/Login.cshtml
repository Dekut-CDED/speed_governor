@page
@model LoginModel


<h1>@ViewData["Title"]</h1>
<div class="row">
    <section>
        <div class="imgBox">
            <img src="~/images/login.jpg" alt="Site Image">
        </div>

        <div class="contentBx">
            <div class="formBx">
                <h2>Login</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="inputBx">
                        <span>Email</span>
                        <input asp-for="Input.Email" class="form-control" />
                        <label asp-validation-for="Input.Email" class="text-danger"></label>
                    </div>
                    <div class="inputBx">
                        <span>Password</span>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="remember">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="inputBx">
                        <input type="submit" value="Sign In"/>
                    </div>

                    <div class="inputBx">
                        <p>
                           Don't have account <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                                confirmation</a>
                        </p>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                </form>
            </div>
         </div>
    </section>
</div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
