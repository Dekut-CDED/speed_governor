@page
@model Api.Admin.SpeedGovernors.Upsert.IndexModel

<form method="post">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.SpeedgovObj.Imei != null)
            {
                <input type="hidden" asp-for="SpeedgovObj.Imei" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88;">
                <h2 class="text-primary">@(Model.SpeedgovObj.Imei !=null ? "Update ": "Create ")SpeedGoverner</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.Imei"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Input.Imei" />
                        <span class="text-danger" asp-validation-for="Input.Imei"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.PlateNumber"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Input.PlateNumber" />
                        <span class="text-danger" asp-validation-for="Input.PlateNumber"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.PhoneNumber"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="Input.PhoneNumber" />
                        <span class="text-danger" asp-validation-for="Input.PhoneNumber"></span>
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SpeedgovObj.Owner.FullName"></label>
                    </div>
                    <div class="col-9">
                        <select id="userlist">
                            @foreach (var item in Model.UserList)
                            {
                                <option value="@item.Id">@item.FullName</option>
                            }
                        </select>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.SpeedgovObj.Imei != null)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

