@page "{id}"
@model Api.Admin.SpeedGovernors.Profile.IndexModel


<div class="border backgroundWhite container">

    <div class="row  register-list">
        <div class="reg-text">
            <h4 class="text-primary">Location for @Model.SpeedGovernor.Imei</h4>
        </div>

        <div class="register-link">
            <a asp-page="/Admin/SpeedGovernors/Map/Map" asp-route-imei="@Model.SpeedGovernor.Imei"> <i class="fas fa-plus"></i>
                &nbsp;
                Track SpeedGovernor</a>
        </div>
    </div>

    <br> <br />

   <div class="row">

    <table id="Dt_Load" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>Time</th>
                <th>Speed</th>
                <th>Latitude</th>
                <th>Longitude </th>
                <th>GpsCourse</th>
                <th>SpeedSignalStatus</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var location in Model.Locations)
            {
                <tr>
                    <td>@location.Time</td>
                    <td>@location.Speed</td>
                    <td>@location.Latitude</td>
                    <td>@location.Long</td>
                    <td>@location.GpsCourse</td>
                    <td>@location.SpeedSignalStatus</td>
                    <td>
                        <a asp-page="/Admin/SpeedGovernors/Map/Index" asp-route-lat="@location.Latitude"
                        asp-route-long="@location.Long" class="btn btn-primary"> <i class="fas fa-plus"></i> &nbsp;
                            ViewonMap</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   </div>
</div>
